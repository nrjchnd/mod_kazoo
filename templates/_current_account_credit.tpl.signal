<span id="{{ #current_account_credit }}">
  {% wire action={connect signal={update_fin_info_signal}
                          action={replace target=#current_account_credit
                                          template="_current_account_credit.tpl.signal"}
                 }
  %}
  {# If there is no m.session.rs_selected_account_id it should return current context account_id balance #}
  {{ m.kazoo[{current_account_credit account_id=m.session.rs_selected_account_id}]|currency_sign }}
</span>
